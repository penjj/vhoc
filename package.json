{
  "name": "vhoc",
  "type": "module",
  "version": "0.0.0-alpha.5",
  "packageManager": "pnpm@10.6.5",
  "description": "Create higher order vue3 components.",
  "author": "penjj <peng.j.1995@gmail.com>",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/penjj/vhoc.git"
  },
  "keywords": [
    "vue",
    "hoc",
    "higher-order-component"
  ],
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.mjs",
      "require": "./dist/index.cjs"
    },
    "./imports": {
      "types": "./dist/imports.d.ts",
      "import": "./dist/imports.mjs",
      "require": "./dist/imports.cjs"
    }
  },
  "files": [
    "dist"
  ],
  "engines": {
    "node": ">=20.0.0"
  },
  "scripts": {
    "prepare": "simple-git-hooks",
    "build": "unbuild",
    "test": "vitest",
    "dev:doc": "vitepress",
    "lint": "eslint --flag=unstable_ts_config .",
    "lint:fix": "pnpm lint --fix",
    "release": "bumpp"
  },
  "dependencies": {
    "@vue/runtime-core": "^3.5.13",
    "@vue/shared": "^3.5.13",
    "vue-component-type-helpers": "^2.2.8"
  },
  "devDependencies": {
    "@antfu/eslint-config": "^4.11.0",
    "@penjj/tsconfig": "^0.5.1",
    "@vue/test-utils": "^2.4.6",
    "bumpp": "^10.1.0",
    "eslint": "^9.23.0",
    "happy-dom": "^17.4.4",
    "jiti": "^2.4.2",
    "lint-staged": "^15.5.0",
    "simple-git-hooks": "^2.12.1",
    "typescript": "^5.8.2",
    "unbuild": "^3.5.0",
    "vitepress": "^1.6.3",
    "vitest": "^3.0.9"
  },
  "simple-git-hooks": {
    "pre-commit": "pnpm lint-staged"
  },
  "lint-staged": {
    "*": [
      "pnpm lint:fix"
    ]
  }
}
